      /* Creative GitHub Projects Section Styles */
      .github-projects-section {
        padding: 4rem 0;
        position: relative;
      }

      .projects-title {
        font-family: "Bebas Neue", sans-serif;
        font-size: 3rem;
        text-align: center;
        margin-bottom: 3rem;
        background: linear-gradient(45deg, #ffffff, #ffffff);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        position: relative;
      }

      .projects-title::after {
        content: '';
        position: absolute;
        bottom: -10px;
        left: 50%;
        transform: translateX(-50%);
        width: 100px;
        height: 3px;
        background: linear-gradient(45deg, #00f5ff, #ff00ff);
        border-radius: 2px;
      }

      .github-projects-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: 2rem;
        margin-top: 4rem;
      }

      .github-project-card {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 20px;
        padding: 2rem;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
        cursor: pointer;
        text-decoration: none;
        color: inherit;
        transform-style: preserve-3d;
        display: block;
      }

      .github-project-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(45deg, rgba(0, 245, 255, 0.1), rgba(255, 0, 255, 0.1));
        opacity: 0;
        transition: opacity 0.3s ease;
        border-radius: 20px;
      }

      .github-project-card:hover::before {
        opacity: 1;
      }

      .github-project-card:hover {
        transform: translateY(-10px) rotateX(5deg);
        box-shadow: 
          0 20px 40px rgba(0, 245, 255, 0.2),
          0 0 50px rgba(255, 0, 255, 0.1);
        border-color: rgba(0, 245, 255, 0.3);
      }

      .project-icon {
        width: 60px;
        height: 60px;
        background: linear-gradient(45deg, #00f5ff, #ff00ff);
        border-radius: 15px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1.5rem;
        font-size: 1.5rem;
        position: relative;
        z-index: 2;
      }

      .project-title {
        font-size: 1.3rem;
        font-weight: bold;
        margin-bottom: 1rem;
        position: relative;
        z-index: 2;
      }

      .project-description {
        font-size: 0.95rem;
        line-height: 1.6;
        opacity: 0.8;
        margin-bottom: 1.5rem;
        position: relative;
        z-index: 2;
      }

      .project-tech {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-bottom: 1.5rem;
        position: relative;
        z-index: 2;
      }

      .tech-tag {
        padding: 0.25rem 0.75rem;
        background: rgba(0, 245, 255, 0.2);
        border: 1px solid rgba(0, 245, 255, 0.3);
        border-radius: 15px;
        font-size: 0.8rem;
        color: #00f5ff;
      }

      .github-link {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1.5rem;
        background: rgba(0, 0, 0, 0.3);
